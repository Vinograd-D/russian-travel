.cover__background
  background url("../../../images/__background.jpg") no-repeat
  background-size cover
  display flex
  flex-direction column
  align-items center
  gap 32px
  justify-content center
  text-align center
  color()
  text-decoration none
  padding 245px 0
  width 100%
  margin 0
  @media (max-width: laptop-s)
    padding 195px 0
  @media (max-width: tablet)
    padding 115px 0
  @media (max-width: mobile-l)
    padding 33px 0
    height 200px
  &:before
    content ""
    position absolute
    top 0
    left 0
    right 0
    bottom 0
    background-color #2A2C2F
    opacity 0.3
    tr(all, .5s)
  &:hover:before
    background-color #2A2C2F
    opacity 0.8

